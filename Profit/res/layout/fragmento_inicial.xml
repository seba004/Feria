<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent" 
   android:background="#FFFFFF"


>

    <EditText
        android:id="@+id/email_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress" >
        
        android:background="@drawable/rectangulo"
        

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/pass_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_usuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/boton_inicio_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass_usuario"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="45dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/forma_boton_inicio"
        
        android:text="Iniciar sesión" />

</RelativeLayout>