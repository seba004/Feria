<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent" >
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="436dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/nombre_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/email_cuenta"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/email_cuenta"
            android:layout_marginTop="28dp"
            android:hint="Nombre y apellido"
            android:inputType="textPersonName" />

<requestFocus />

        <EditText
            android:id="@+id/email_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/crear_cuenta"
            android:layout_below="@+id/nombre_cuenta"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />
        
          <EditText
            android:id="@+id/nickname_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/email_cuenta"
            android:layout_below="@+id/email_cuenta"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Nickname" />
        
		<EditText
            android:id="@+id/pass_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nickname_cuenta"
            android:layout_alignRight="@+id/nickname_cuenta"
            android:layout_below="@+id/nickname_cuenta"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Pass min 6 carc"
            android:inputType="textPassword" />
        
        
        <EditText
            android:id="@+id/check_pass_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pass_cuenta"
            android:layout_alignRight="@+id/pass_cuenta"
            android:layout_below="@+id/pass_cuenta"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Repita pass"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/nacimiento_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/check_pass_cuenta"
            android:layout_alignRight="@+id/check_pass_cuenta"
            android:layout_below="@+id/check_pass_cuenta"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="YYYY-MM-DD"
            android:inputType="date" />



        <Button
            android:id="@+id/crear_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:background="@drawable/forma_boton_inicio"
            android:text="Crear"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </RelativeLayout>
    

</ScrollView>
